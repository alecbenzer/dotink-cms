<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">

<head>
  <title>dotInk</title>
  <style type="text/css">
   @import "/stylesheets/style.css";
   @import "/options/header-default.css";
   @import "/options/content-default.css";
   @import "/options/side-default.css";
  </style>

  <!--[if lte IE 6]>
   <style type="text/css" media="all">@import "ie6.css";</style>
  <![endif]-->

 <script src="/javascripts/jquery.js" type="text/javascript"></script>
 <script src="/javascripts/jquery.arclite.js" type="text/javascript"></script>

 <meta http-equiv="content-type" content="text/html; charset=utf-8" />
</head>


<body>
 <!-- page -->
 <div id="page" class="with-sidebar">
  <div id="header-wrap">
   <div id="header" class="block-content">
     <div id="pagetitle">
      <h1 class="logo"><%= link_to "dotInk", :controller => "home", :action => "index" %></h1>
      <h4>The Ad Agency</h4>
      <div class="clear"></div>
      
      <!-- search form -->
      <div class="search-block">
        	<p>
			  <% form_tag('/articles/search') do %>
			    <%= text_field_tag 'query' %>
			  <% end %>
			</p>
      </div>
      <!-- /search form -->
      
     </div>
     <!-- main navigation -->
     <div id="nav-wrap1">
       <div id="nav-wrap2">
         <ul id="nav">
           <li><%= link_to '<span>Articles</span>', articles_path, :class => "fadeThis" %>
	     <ul>
	       <% for i in @latest_articles do %>
	       <li><%= link_to i.title, i, :class => "fadeThis" %></li>
	       <% end %>
	     </ul>
	   </li>
         </ul>
       </div>
     </div>
     <!-- /main navigation -->
     
   </div>
   
   
   
   <div id="main-wrap1">
     <div id="main-wrap2">
       <div id="main" class="block-content">
	 <div class="mask-main rightdiv">
	   <div class="mask-left">
             <div class="col1">
               <div id="main-content">
		 
		 <%= render :partial => 'article', :collection => @articles %>
		 <%= will_paginate @articles, :params => {:query => @query} %>
		 
	       </div>
             </div>
	   </div>
	 </div>
	 <div class="clear-content"></div>
       </div>
     </div>
   </div>
  
  <!-- footer -->
  <div id="footer">
    <div class="block-content">
      <div class="copyright">
	Arclite theme by <a href="http://digitalnature.ro/projects/arclite">digitalnature</a> | Validate <a href="http://validator.w3.org/check/referer">XHTML 1.1</a>
      </div>
    </div>
  </div>
  <!-- /footer -->
  
 </div>
 <!-- /page -->
 
 <script type="text/javascript">
   /* <![CDATA[ */
    var isIE6 = false; /* <- do not change! */
    var isIE = false;  /* <- do not change! */
    var lightbox = 1;  /* lightbox on/off ? */
  /* ]]> */
 </script>
