<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">

<head>
  <title>dotInk</title>
  <style type="text/css">
   @import "/stylesheets/style.css";
   @import "/options/header-default.css";
   @import "/options/content-default.css";
   @import "/options/side-default.css";
  </style>

  <!--[if lte IE 6]>
   <style type="text/css" media="all">@import "ie6.css";</style>
  <![endif]-->

 <script src="/javascripts/jquery.js" type="text/javascript"></script>
 <script src="/javascripts/jquery.arclite.js" type="text/javascript"></script>

 <meta http-equiv="content-type" content="text/html; charset=utf-8" />
</head>


<body>
 <!-- page -->
 <div id="page" class="with-sidebar">
  <div id="header-wrap">
   <div id="header" class="block-content">
     <div id="pagetitle">
      <h1 class="logo"><%= link_to "dotInk", :controller => "home", :action => "index" %></h1>
      <h4>The Ad Agency</h4>
      <div class="clear"></div>

      <!-- search form -->
      <div class="search-block">
			<p>
			  <% form_tag('/articles/search') do %>
			    <%= text_field_tag 'query' %>
			  <% end %>
			</p>
      </div>
      <!-- /search form -->

     </div>
     <!-- main navigation -->
     <div id="nav-wrap1">
      <div id="nav-wrap2">
        <ul id="nav">
         <li><%= link_to '<span>Articles</span>', articles_path, :class => "fadeThis" %>
	   <ul>
	     <% for i in @latest_articles %>
	     <li><%= link_to i.title, i, :class => "fadeThis" %></li>
	     <% end %>
	   </ul>
	 </li>
        </ul>
      </div>
     </div>
     <!-- /main navigation -->

   </div>



   <div id="main-wrap1">
    <div id="main-wrap2">
     <div id="main" class="block-content">
      <div class="mask-main rightdiv">
       <div class="mask-left">
        <div class="col1">
          <div id="main-content">

            <!-- post -->
            <div class="post">
              <div class="post-header">
		<h3 class="post-title"><a href="#">The dotInk CMS</a></h3>
		<p class="post-date">
		  <span class="month">Nov</span>
		  <span class="day">18</span>
		</p>
		<p class="post-author">
		  <span class="info">Created by <a href="#">Mark Fayngersh</a> and <a href="#">Alec Benzer</a></span>
		</p>
              </div>
              <div class="post-content clearfix">
		<p class="alignleft"><a href="http://i3.photobucket.com/albums/y75/gmaster1440/dotInk.png"><img src="http://i3.photobucket.com/albums/y75/gmaster1440/dotInk.png" alt="dotInk" /></a></p>
		<p><br/>
			This site was developed by Mark Fayngersh and Alec Benzer to demonstrate the possibilities one has when it comes to customizable CMS options. http://dotInk.heroku.com was built from the ground up using a web development framework for the Ruby language known as Ruby on Rails, or RoR.
		</p>
              </div>
            </div>
            <!-- /post -->	    
          </div>
	  
        </div>
    	<div class="col2">
	  
          <ul id="sidebar">	    
            <li class="block">
	      
              <!-- box -->
              <div class="box">
		<div class="titlewrap"><h4><span>dotInk</span></h4></div>
		
		<div class="wrapleft">
		  <div class="wrapright">
		    <div class="tr">
                      <div class="bl">
			<div class="tl">
			  <div class="br the-content">
			    <p>Welcome to dotInk, an Ad Agency Project.</p>
                  </div>
			</div>
                      </div>
		    </div>
		  </div>
		</div>
		
              </div>
              <!-- /box -->
	      
            </li>
	    
          </ul>
	  
        </div>
       </div>
      </div>
      <div class="clear-content"></div>
     </div>
     
     
    </div>
   </div>
   
  </div>
  
  <!-- footer -->
  <div id="footer">
    <div class="block-content">
      <div class="copyright">
	Arclite theme by <a href="http://digitalnature.ro/projects/arclite">digitalnature</a> | Validate <a href="http://validator.w3.org/check/referer">XHTML 1.1</a>
      </div>
    </div>
  </div>
  <!-- /footer -->
  
 </div>
 <!-- /page -->
 
 <script type="text/javascript">
